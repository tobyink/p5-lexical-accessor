	].

`Lexical-Accessor 0.007 cpan:TOBYINK`
	issued  2014-03-29;
	changeset [
		item "Much cleaned up Sub::Accessor::Small."^^Change;
	].

`Lexical-Accessor 0.008 cpan:TOBYINK`
	issued  2014-03-29;
